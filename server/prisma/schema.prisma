generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  email     String    @unique
  password  String?
  googleId  String?   @unique
  authProvider String?
  name      String?
  avatarUrl String?
  emailVerified Boolean @default(false)
  emailVerifyTokenHash String?
  emailVerifyTokenExpires DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @default(now()) @updatedAt
  subjects  Subject[]
  sharedWithMe SharedWithUser[] @relation("SharedWith")
}

model Subject {
  id          String     @id @default(uuid())
  name        String
  description String?
  userId      String
  user        User       @relation(fields: [userId], references: [id])
  createdAt   DateTime   @default(now())
  documents   Document[]
  shares      Share[]
  sharedWith  SharedWithUser[]
  suggestions Suggestion[]
}

model Document {
  id        String    @id @default(uuid())
  title     String
  filePath  String
  fileSize  Int?
  subjectId String
  subject   Subject   @relation(fields: [subjectId], references: [id])
  uploadedAt DateTime @default(now())
  concepts  Concept[]
}

model Concept {
  id          String   @id @default(uuid())
  term        String
  definition  String
  example     String?
  pageNumber  Int
  documentId  String
  document    Document @relation(fields: [documentId], references: [id])
  relatedFrom Relation[] @relation("SourceConcept")
  relatedTo   Relation[] @relation("TargetConcept")
  suggestions Suggestion[]
}

model Relation {
  id        String  @id @default(uuid())
  sourceId  String
  targetId  String
  type      String?
  source    Concept @relation("SourceConcept", fields: [sourceId], references: [id])
  target    Concept @relation("TargetConcept", fields: [targetId], references: [id])
}

model Suggestion {
  id           String   @id @default(uuid())
  subjectId    String
  conceptId    String
  term         String
  type         String
  severity     String
  message      String
  suggestion   String
  aiSuggestion Json?
  status       String   @default("pending") // pending | approved | rejected
  createdAt    DateTime @default(now())
  expiresAt    DateTime

  subject      Subject  @relation(fields: [subjectId], references: [id], onDelete: Cascade)
  concept      Concept  @relation(fields: [conceptId], references: [id], onDelete: Cascade)

  @@index([subjectId, status])
  @@index([conceptId])
}

model Share {
  id          String   @id @default(uuid())
  token       String   @unique
  subject     Subject  @relation(fields: [subjectId], references: [id], onDelete: Cascade)
  subjectId   String
  shareType   String   // "public" hoáº·c "private"
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model SharedWithUser {
  id          String   @id @default(uuid())
  subject     Subject  @relation(fields: [subjectId], references: [id], onDelete: Cascade)
  subjectId   String
  user        User     @relation("SharedWith", fields: [userId], references: [id], onDelete: Cascade)
  userId      String
  permission  String   @default("view") // "view" only
  createdAt   DateTime @default(now())

  @@unique([subjectId, userId])
}

model QuizResult {
  id          String   @id @default(uuid())
  userId      String
  subjectId   String
  score       Int
  total       Int
  percentage  Int
  passed      Boolean
  timeSpent   Int // seconds
  wrongAnswers Json // [{questionId, userAnswer, correctAnswer, explanation}, ...]
  createdAt   DateTime @default(now())

  @@index([userId, subjectId])
  @@index([createdAt])
}